---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Vanezus">
  <main>
    <!-- lol -->
    <section id="page">
      <div class="space-y-4 text-center divide-y dark:divide-gray-700">
        <section id="card">
          <div class="relative">
            <div
              class="flex h-full rounded-md border border-gray-800 bg-gradient-to-b from-gray-950 to-black px-3 py-2"
            >
              <section class="p-4 mx-auto" id="card body">
                <p class="text-2xl font-bold text-gray-200 fontj">Vanezus</p>
                <div
                  class="h-px max-w-6xl mx-auto"
                  style="background-image: linear-gradient(90deg, rgba(149, 131, 198, 0) 1.46%, rgba(149, 131, 198, 0.6) 40.83%, rgba(149, 131, 198, 0.3) 65.57%, rgba(149, 131, 198, 0) 107.92%);"
                >
                </div>
                <section class="mt-2" id="badge">
                  <span
                    class="inline-flex h-full cursor-pointer items-center justify-center rounded-full border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium text-gray-300"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="animate-rotate-x animate-once w-4 mr-2 h-6"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418"
                      ></path>
                    </svg>
                    Frontend
                  </span>
                  <span
                    class="inline-flex h-full cursor-pointer items-center justify-center rounded-full border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium text-gray-300"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="animate-rotate-x animate-once w-4 mr-2 h-6"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M21.75 6.75a4.5 4.5 0 0 1-4.884 4.484c-1.076-.091-2.264.071-2.95.904l-7.152 8.684a2.548 2.548 0 1 1-3.586-3.586l8.684-7.152c.833-.686.995-1.874.904-2.95a4.5 4.5 0 0 1 6.336-4.486l-3.276 3.276a3.004 3.004 0 0 0 2.25 2.25l3.276-3.276c.256.565.398 1.192.398 1.852Z"
                      ></path>
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M4.867 19.125h.008v.008h-.008v-.008Z"></path>
                    </svg>
                    Backend
                  </span>
                </section>
                <section id="tabs" class="mt-5">
                  <p class="text-xl font-bold text-gray-200 fontj">
                    Skills
                    <div class="flex mt-1 justify-center">
                      <div class="bg-blue-500 h-1 rounded-full w-1/4"></div>
                    </div>
                  </p>
                  <div>
                    <div
                      class="-mb-0.5 flex justify-center space-x-6"
                      aria-label="Tabs"
                      role="tablist"
                    >
                      <button
                        type="button"
                        class="hs-tab-active:font-semibold hs-tab-active:mb-2 hs-tab-active:border-blue-600 hs-tab-active:text-blue-600 py-4 px-1 inline-flex items-center gap-x-2 border-b-2 border-transparent text-sm whitespace-nowrap text-gray-500 hover:text-blue-600 focus:outline-none focus:text-blue-600 disabled:opacity-50 disabled:pointer-events-none dark:text-neutral-400 dark:hover:text-blue-500 active"
                        id="horizontal-alignment-item-1"
                        data-hs-tab="#horizontal-alignment-1"
                        aria-controls="horizontal-alignment-1"
                        role="tab"
                      >
                        <div class="hs-tab-active:animate-fade-up">
                          Languages
                        </div>
                      </button>
                      <button
                        type="button"
                        class="hs-tab-active:font-semibold hs-tab-active:mb-2 hs-tab-active:border-blue-600 hs-tab-active:text-blue-600 py-4 px-1 inline-flex items-center gap-x-2 border-b-2 border-transparent text-sm whitespace-nowrap text-gray-500 hover:text-blue-600 focus:outline-none focus:text-blue-600 disabled:opacity-50 disabled:pointer-events-none dark:text-neutral-400 dark:hover:text-blue-500"
                        id="horizontal-alignment-item-1"
                        data-hs-tab="#horizontal-alignment-2"
                        aria-controls="horizontal-alignment-2"
                        role="tab"
                      >
                        <div class="hs-tab-active:animate-fade-up">
                          Frameworks / Libraries
                        </div>
                      </button>
                      <button
                        type="button"
                        class="hs-tab-active:font-semibold hs-tab-active:mb-2 hs-tab-active:border-blue-600 hs-tab-active:text-blue-600 py-4 px-1 inline-flex items-center gap-x-2 border-b-2 border-transparent text-sm whitespace-nowrap text-gray-500 hover:text-blue-600 focus:outline-none focus:text-blue-600 disabled:opacity-50 disabled:pointer-events-none dark:text-neutral-400 dark:hover:text-blue-500"
                        id="horizontal-alignment-item-1"
                        data-hs-tab="#horizontal-alignment-3"
                        aria-controls="horizontal-alignment-3"
                        role="tab"
                      >
                        <div class="hs-tab-active:animate-fade-up">Tools</div>
                      </button>
                    </div>
                  </div>
                  <div class="mt-3">
                    <div
                      id="horizontal-alignment-1"
                      role="tabpanel"
                      aria-labelledby="horizontal-alignment-item-1"
                    >
                      <p class="text-gray-500 dark:text-neutral-400">
                        <section
                          class="overflow-auto animate-fade mx-auto grid grid-cols-4 mt-2 mb-2 gap-3"
                          id="lang badges"
                        >
                          <a
                            href="https://python.org/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-python-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://developer.mozilla.org/en-US/docs/Web/JavaScript"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-javascript-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://typescriptlang.org/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-typescript-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://developer.mozilla.org/en-US/docs/Web/Html"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-html5-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://developer.mozilla.org/en-US/docs/Web/css"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-css3-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://lua.org/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-lua-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://java.com/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-java-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://go.dev/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-go-plain text-2xl"></i>
                          </a>
                        </section>
                      </p>
                    </div>
                    <div
                      id="horizontal-alignment-2"
                      class="hidden"
                      role="tabpanel"
                      aria-labelledby="horizontal-alignment-item-2"
                    >
                      <p class="text-gray-500 dark:text-neutral-400">
                        <section
                          class="overflow-auto animate-fade mx-auto grid grid-cols-4 mt-2 mb-2 gap-3"
                          id="libs badges"
                        >
                          <a
                            href="https://react.dev/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-react-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://nextjs.org/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-nextjs-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://nuxt.com/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-nuxtjs-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://astro.build/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-astro-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://discord.js.org/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-discordjs-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://nodejs.org/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-nodejs-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://tailwindcss.com/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-tailwindcss-original text-2xl"
                            ></i>
                          </a>
                          <a
                            href="https://flask.palletsprojects.com/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-flask-plain text-2xl"></i>
                          </a>
                        </section>
                      </p>
                    </div>
                    <div
                      id="horizontal-alignment-3"
                      class="hidden"
                      role="tabpanel"
                      aria-labelledby="horizontal-alignment-item-3"
                    >
                      <p class="text-gray-500 dark:text-neutral-400">
                        <section
                          class="overflow-auto animate-fade mx-auto grid grid-cols-4 mt-2 mb-2 gap-3"
                          id="tools badges"
                        >
                          <a
                            href="https://cloudflare.com/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-cloudflare-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://github.com/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-github-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://code.visualstudio.com/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-vscode-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://visualstudio.com/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-visualstudio-plain text-2xl"></i>
                          </a>
                          <a
                            href="https://docker.com/"
                            target="_blank"
                            class="h-full cursor-pointer rounded-md border border-gray-800 bg-[linear-gradient(110deg,#000,45%,#4D4B4B,55%,#000)] bg-[length:250%_100%] px-3 py-1 text-xs font-medium hover:bg-[length:220%_100%] text-gray-300"
                          >
                            <i class="devicon-docker-plain text-2xl"></i>
                          </a>
                        </section>
                      </p>
                    </div>
                  </div>
                </section>
                <section id="tabs" class="mt-5">
                  <p class="text-xl font-bold text-gray-200 fontj">
                    Urls
                    <div class="flex mt-1 justify-center">
                      <div class="bg-blue-500 h-1 rounded-full w-1/4"></div>
                    </div>
                  </p>
                  <section class="mt-2" id="urls">
                    <a
                      href="https://github.com/gdeVanezus"
                      class="hover:bg-gray-900 inline-flex items-center justify-center rounded-full border border-gray-800 bg-gray-950 px-2 py-1 text-xs font-medium text-gray-300 backdrop-blur-3xl"
                    >
                      <i class="fa-brands fa-github text-2xl"></i>
                    </a>
                    <a
                      href="https://discord.com/users/1105120003197522000"
                      class="hover:bg-gray-900 inline-flex items-center justify-center rounded-full border border-gray-800 bg-gray-950 px-1 py-1 text-xs font-medium text-gray-300 backdrop-blur-3xl"
                    >
                      <i class="fa-brands fa-discord text-2xl"></i>
                    </a>
                    <a
                      href="https://t.me/gdeVanezus"
                      class="hover:bg-gray-900 inline-flex items-center justify-center rounded-full border border-gray-800 bg-gray-950 px-2 py-1 text-xs font-medium text-gray-300 backdrop-blur-3xl"
                    >
                      <i class="fa-brands fa-telegram text-2xl"></i>
                    </a>
                  </section>
                </section>
              </section>
            </div>
          </div>
        </section>
      </div>
    </section>
  </main>

  <style>
    .fontj {
      font-family: "Josefin Sans", sans-serif;
    }
  </style>
</Layout>
